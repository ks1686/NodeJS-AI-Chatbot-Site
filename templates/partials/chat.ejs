<div class="chat-container">
  <style>
    .chat-container {
      position: fixed;
      bottom: 20px; /* Adjust as needed */
      right: 20px; /* Adjust as needed */
      width: 350px; /* Adjust chat box width */
      max-width: 100%; /* Allow it to take full width when expanded */
      background-color: #f9f9f9;
      border: 1px solid #ddd;
      border-radius: 8px;
      padding: 20px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      transition: width 0.3s ease-out; /* Smooth transition for width */
    }

    .chat-container.collapsed {
      width: 20px; /* Collapse width to match toggle button */
      height: 20px; /* Collapse height to match toggle button */
    }

    .chat-header {
      display: flex;
      align-items: center;
      justify-content: space-between;
      transition: opacity 0.3s ease-out; /* Smooth transition for title */
      opacity: 1; /* Initially visible */
    }

    #chat-title {
      margin: 0;
    }

    .toggle-chat-btn {
      position: absolute;
      top: 20px; /* Adjust as needed */
      right: 20px; /* Adjust as needed */
      background-color: transparent;
      border: none;
      color: #000;
      font-size: 20px;
      cursor: pointer;
      z-index: 1000; /* Ensure button remains on top */
    }

    .chat-container.collapsed .chat-header {
      opacity: 0; /* Hide title when chat is collapsed */
    }

    .chat-content {
      transition: max-height 0.3s ease-out; /* Smooth transition for collapse effect */
      max-height: 1000px; /* Initial max height, adjust as needed */
      overflow: hidden;
    }

    .chat-container.collapsed .chat-content {
      max-height: 0; /* Collapse chat content */
      overflow: hidden;
    }

    .chat-box {
      height: 200px; /* Adjust chat box height */
      overflow-y: auto;
      border: 1px solid #ddd;
      border-radius: 8px;
      padding: 10px;
      margin-bottom: 10px;
      background-color: #fff;
    }

    .chat-input-container {
      display: flex;
      align-items: center;
    }

    .chat-input {
      flex: 1;
      padding: 10px;
      border: 1px solid #ddd;
      border-radius: 8px;
    }

    .chat-send-button,
    .recordBtn {
      padding: 10px 20px;
      background-color: #007bff;
      color: white;
      border: none;
      border-radius: 8px;
      cursor: pointer;
      margin-left: 10px;
    }

    .chat-send-button:hover,
    .recordBtn:hover {
      background-color: #0056b3;
    }

    .recordBtn {
      background-color: #28a745; /* Green color for voice button */
    }

    .recordBtn:hover {
      background-color: #218838; /* Darker green color on hover */
    }
  </style>

  <div class="chat-header">
    <h1 id="chat-title">Chat with Us</h1>
  </div>
  <button class="toggle-chat-btn" onclick="toggleChat()">-</button>
  <div class="chat-content">
    <div class="chat-box">
      <!-- Chat messages will be appended here -->
    </div>
    <div class="chat-input-container">
      <label for="chat-input"></label>
      <input
        type="text"
        id="chat-input"
        class="chat-input"
        placeholder="Type your message here..."
        onkeydown="quickSubmitChat(event)"
      />
      <button onclick="sendMessage()" class="chat-send-button">Send</button>
      <button id="recordBtn" class="recordBtn" onclick="toggleRecording()">
        Record
      </button>
      <button
        id="stopBtn"
        class="recordBtn"
        style="display: none"
        onclick="stopRecording()"
      >
        Stop
      </button>
    </div>
  </div>
</div>

<script src="/js/scripts.js"></script>
